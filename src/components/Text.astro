---
// Henter parametrene fra Astro.props
const { type = "normal", font = "open", stylingclasses = "text-md lg:text-lg" } = Astro.props;

const typeClasses = {
  normal: "text-base",
  bold: "text-bold",
  italic: "text-italic",
};

const fontClasses = {
  body: "font-body",
  display: "font-display",
};
---

<p class:list={[typeClasses[type], fontClasses[font], stylingclasses]}><slot /></p>

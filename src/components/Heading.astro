---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", font = "sans", type = "normal", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  hero: "text-7xl lg:text-8xl",
  large: "text-3xl lg:text-4xl",
  medium: "text-2xl lg:text-3xl",
  small: "text-xl",
  xsmall: "text-md",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  body: "font-body",
};

const typeClasses = {
  normal: "font-normal",
  bold: "font-bold",
};
---

<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font], typeClasses[type]]}><slot /></Htmlheading>

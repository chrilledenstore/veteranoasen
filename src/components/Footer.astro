---
import Text from "./Text.astro";
import Heading from "./Heading.astro";
---

<footer class="bg-orange-900 text-neutral-50 h-auto py-5">
  <!-- mobile -->
  <section class="container mx-auto p-4 grid grid-cols-2 grid-rows-2 gap-y-8 lg:grid-cols-3 lg:grid-rows-1 lg:p-10 lg:py-15">
    <article class="flex flex-col gap-5 col-start-1 row-start-1 place-content-center lg:col-start-1 lg:row-start-1">
      <div class="flex flex-row place-content-left gap-2">
        <div class="w-10 lg:w-15 place-content-center"><img src="/icons/kfum.svg" alt="kfum logo" /></div>
        <div class="place-content-center"><Heading font="display" size="medium" class="place-content-center">KFUM</Heading></div>
      </div>
      <div class="flex flex-row place-content-left gap-2">
        <div class="w-10 lg:w-15 place-content-center"><img src="/icons/veteranoasen.svg" alt="veteranoasen logo" /></div>
        <div class="place-content-center"><Heading font="display" size="medium">VETERAN<br class="md:hidden" />OASEN</Heading></div>
      </div>
    </article>
    <article class="col-start-2 row-start-1 lg:col-start-2 lg:row-start-1 border-l-1 border-neutral-50 lg:border-l-0 lg:m-auto">
      <li class="list-none space-y-4 pl-4">
        <ul>Handelsbetingelser</ul>
        <ul>Om os</ul>
        <ul>Ansøg</ul>
        <ul>Støt</ul>
        <ul>FAQ</ul>
      </li>
    </article>
    <article class="col-start-1 row-start-2 col-span-2 flex flex-col gap-4 lg:col-start-3 lg:row-start-1 lg:col-span-1 lg:border-l-1 lg:pl-30">
      <li class="list-none space-y-4">
        <ul><Text font="body" type="bold">Kontakt os:</Text></ul>
        <ul><Text font="body">Tlf: +12 23 454 676</Text></ul>
        <ul><Text font="body">Email: veteranoasen@email.dk</Text></ul>
      </li>
      <div class="w-auto flex flex-row">
        <div class="rounded-l-md">
          <label class="input join-item bg-orange-100 text-neutral-900">
            <input type="email" placeholder="Skriv din mail" required />
          </label>
        </div>
        <button class="bg-orange-500 px-2 rounded-r-md hover:cursor-pointer hover:bg-orange-600"> <img src="/icons/paperplane.svg" class="w-7" alt="" /> </button>
      </div>

      <aside class="flex flex-row col-start-2 row-start-2 gap-5 mt-2 lg:hidden">
        <div class="hover:cursor-pointer"><img src="/icons/facebook.svg" alt="" /></div>
        <div class="hover:cursor-pointer"><img src="/icons/twitter.svg" alt="" /></div>
      </aside>
    </article>
  </section>
</footer>

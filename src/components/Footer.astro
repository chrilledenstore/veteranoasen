---
import Text from "./Text.astro";
---

<footer class="bg-orange-900 text-neutral-50 h-auto py-5">
  <!-- mobile -->
  <section class="container mx-auto p-4 grid grid-cols-2 grid-rows-2 gap-y-8">
    <article class="flex flex-col gap-5 col-start-1 row-start-1 place-content-center">
      <div class="flex flex-row place-content-left gap-2">
        <div class="w-10 place-content-center"><img src="/icons/kfum.svg" alt="kfum logo" /></div>
        <div class="place-content-center"><Text font="display" class="place-content-center">KFUM</Text></div>
      </div>
      <div class="flex flex-row place-content-left gap-2">
        <div class="w-10 place-content-center"><img src="/icons/veteranoasen.svg" alt="veteranoasen logo" /></div>
        <div class="place-content-center"><Text font="display">VETERANOASEN</Text></div>
      </div>
    </article>
    <article class="col-start-2 row-start-1 border-l-1 border-neutral-50">
      <li class="list-none space-y-4 pl-4">
        <ul>Handelsbetingelser</ul>
        <ul>Om os</ul>
        <ul>Ansøg</ul>
        <ul>Støt</ul>
        <ul>FAQ</ul>
      </li>
    </article>
    <article class="col-start-1 row-start-2 col-span-2 flex flex-col gap-3">
      <h2>Kontak os:</h2>
      <p>Tlf: +12 23 454 676</p>
      <p>Email: veteranoasen@email.dk</p>

      <div class="w-auto flex flex-row">
        <div class="rounded-l-md">
          <label class="input join-item bg-orange-100">
            <input type="email" placeholder="Skriv din mail" required />
          </label>
        </div>
        <button class="bg-orange-500 px-2 rounded-r-md hover:cursor-pointer hover:bg-orange-600"> <img src="/icons/paperplane.svg" class="w-7" alt="" /> </button>
      </div>
      <aside class="flex flex-row col-start-2 row-start-2 gap-5 mt-2 lg:hidden">
        <div class="hover:cursor-pointer"><img src="/icons/facebook.svg" alt="" /></div>
        <div class="hover:cursor-pointer"><img src="/icons/twitter.svg" alt="" /></div>
      </aside>
    </article>
  </section>
</footer>

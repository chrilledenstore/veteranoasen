---

<div class="w-full font-sansation">
  <div
    x-data="{ open: null, items: [
    { src: '/imggggg/mandag.webp', title: 'MANDAG', desc: 'Description 1' },
    { src: '/imggggg/tirsdag.webp', title: 'TIRSDAG', desc: 'Description 2' },
    { src: '/imggggg/onsdag.webp', title: 'ONSDAG', desc: 'Description 3' },
    { src: '/imggggg/torsdag.webp', title: 'TORSDAG', desc: 'Description 4' },
    { src: '/imggggg/fredag.webp', title: 'FREDAG', desc: 'Description 5' }
  ] }"
    class="flex flex-col md:flex-row md:flex-nowrap w-full max-w-7xl mx-auto">
    <template x-for="(item, idx) in items" :key="idx">
      <div :class="open === idx ? 'w-full transition-all duration-700 ease-in-out md:w-3/5' : 'w-full transition-all duration-700 ease-in-out md:w-1/5'">
        <div class="relative w-full overflow-hidden transition-all duration-700 ease-in-out" :class="open === idx ? 'h-48 md:h-[32rem]' : 'h-24 md:h-[32rem]'">
          <button @click="open = open === idx ? null : idx" class="w-full h-full flex flex-col items-center focus:outline-none relative cursor-pointer">
            <img :src="item.src" :alt="item.title" class="absolute inset-0 w-full h-full object-cover shadow m-0 p-0" />
            <span class="absolute inset-0 w-full h-full pointer-events-none bg-blue-800/60"></span>
            <div class="absolute left-0 top-5 w-full flex flex-col z-10">
              <span
                class="flex items-center md:justify-center justify-start text-white pl-4 pt-4 font-bold text-2xl lg:text-4xl font-base"
                x-text="item.title"
              ></span>
              <template x-if="open === idx">
                <span
                  class="text-white font-body text-lg lg:text-2xl font-medium text-left md:text-center px-4 pt-2"
                  x-text="item.desc"
                ></span>
              </template>
            </div>
            <span class="absolute top-0 right-0 h-full flex items-center justify-end pr-4 z-20 w-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white opacity-80 transition-transform duration-300 md:rotate-[-90deg]" :class="open === idx ? 'rotate-180' : ''" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
              </svg>
            </span>
          </button>
        </div>
      </div>
    </template>
  </div>
</div>

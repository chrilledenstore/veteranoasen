---

<div class="w-full">
  <div x-data="{ open: null, items: [
    { src: '/imggggg/beepboop.webp', title: 'mandag', desc: 'Description 1' },
    { src: '/imggggg/beepboop.webp', title: 'tirsdag', desc: 'Description 2' },
    { src: '/imggggg/beepboop.webp', title: 'onsdag', desc: 'Description 3' },
    { src: '/imggggg/beepboop.webp', title: 'torsdag', desc: 'Description 4' },
    { src: '/imggggg/beepboop.webp', title: 'fredag', desc: 'Description 5' }
  ] }" class="flex flex-col md:flex-row md:flex-nowrap w-full max-w-7xl mx-auto">
    <template x-for="(item, idx) in items" :key="idx">
      <div :class="open === idx ? 'w-full transition-all duration-700 ease-in-out md:w-3/5' : 'w-full transition-all duration-700 ease-in-out md:w-1/5'">
        <div class="relative w-full overflow-hidden transition-all duration-700 ease-in-out" :class="open === idx ? 'h-72 md:h-[32rem]' : 'h-40 md:h-[32rem]'">
          <button @click="open = open === idx ? null : idx" class="w-full h-full flex flex-col items-center focus:outline-none relative">
            <img :src="item.src" :alt="item.title" class="absolute inset-0 w-full h-full object-cover shadow m-0 p-0" />
            <span class="absolute inset-0 w-full h-full pointer-events-none bg-blue-800/60"></span>
            <span class="absolute top-0 left-0 w-full flex items-center justify-center text-white text-xl font-bold py-2 z-10" x-text="item.title"></span>
            <template x-if="open !== idx">
              <span class="absolute inset-0 flex items-center justify-center z-20">
                <!-- Down arrow, rotates to right on desktop -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white opacity-80 transition-transform duration-300 md:rotate-[-90deg]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </span>
            </template>
          </button>
          <template x-if="open === idx">
            <div class="absolute inset-0 flex items-center justify-center transition-all duration-700 ease-in-out">
              <p class="text-white text-lg font-semibold text-center px-4" x-text="item.desc"></p>
            </div>
          </template>
        </div>
      </div>
    </template>
  </div>
</div>
